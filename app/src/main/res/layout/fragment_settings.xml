<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/settingsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        tools:context=".screens.SettingsFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/settingsViewSafeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="1dp" >

            <RelativeLayout

                android:id="@+id/settingsViewSafeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/settingsViewSafeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SFW enabled"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/settingsViewSafeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>